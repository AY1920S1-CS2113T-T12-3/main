<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1">
    <children>
        <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="active" alignment="CENTER" prefHeight="28.0" prefWidth="140.0"
                       style="-fx-background-color: #32cb00; -fx-background-radius: 5; -fx-padding: 4;" text="10 Active"
                       textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="SF Pro Text Regular" size="17.0"/>
                    </font>
                </Label>
                <Label fx:id="finished" alignment="CENTER" prefHeight="28.0" prefWidth="140.0"
                       style="-fx-background-color: #00bfa5; -fx-background-radius: 5; -fx-padding: 4;"
                       text="10 Completed" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="SF Pro Text Regular" size="17.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="canceled" alignment="CENTER" prefHeight="28.0" prefWidth="140.0"
                       style="-fx-background-color: #bdbdbd; -fx-background-radius: 5; -fx-padding: 4;"
                       text="5 Canceled" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="SF Pro Text Regular" size="17.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <JFXListView fx:id="orderListView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0"/>
    </children>
</AnchorPane>
